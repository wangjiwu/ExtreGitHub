<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_follow"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.lenovo.httpapi.XCRoundImageView
            android:id="@+id/actionIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="25dp" />

        <TextView
            android:id="@+id/updateTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="85dp"
            android:gravity="center"

            android:text="2019-01-01 22:22:20"
            android:textColor="#242424"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/creattime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:gravity="center"

            android:text="wangjiwu"
            android:textColor="#242424"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/despretion"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="starred"
            android:textColor="#242424"
            android:textSize="10dp" />


        <ImageView
            android:id="@+id/git_comment"
            android:layout_width="13dp"
            android:layout_height="10dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon3" />

        <TextView
            android:id="@+id/git_comment_number2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="10"
            android:textColor="#242424"
            android:textSize="10dp" />

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>