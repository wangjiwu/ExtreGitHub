<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.lenovo.httpapi.XCRoundImageView
            android:id="@+id/comment_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColor="#242424" />

        <TextView
            android:id="@+id/comment_user"
            android:layout_width="51dp"
            android:layout_height="20dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="123456"
            android:textColor="#242424"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/issue_detail"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="45dp"
            android:gravity="left"
            android:text="Create at:"
            android:textColor="#242424"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="45dp"
            android:gravity="left"
            android:text="2007-10-11 15:55:31"
            android:textColor="#242424"

            android:textSize="10dp" />

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="150dp"
            android:minHeight="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="65dp"
            android:gravity="left"
            android:padding="5px"
            android:text="asfasfasfdad  asfasfasfdad  asfasfasfdad  asfasfasfdad"
            android:textColor="#242424"
            android:textSize="10dp" />


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>