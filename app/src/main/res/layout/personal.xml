<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87ceeb">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:background="@mipmap/nohead"
        >
        <ImageView
            android:id="@+id/person"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="42dp"
            android:src="@mipmap/nohead"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:textColor="#ffffff"
            android:text="沐风"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="18dp"
            android:text="人生像一场没有尽头的旅行."/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/introduction"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="personal message"
            android:textSize="30dp"
            android:textColor="#000000"/>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="54dp"
            android:src="@mipmap/email"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:gravity="left"
            android:text="Email: "
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Not set"
            android:textSize="20dp"
            android:textColor="#000000"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="84dp"
            android:src="@mipmap/blog1"
            />

        <TextView
            android:id="@+id/Blog"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:gravity="left"
            android:text="Blog: "
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/Blog_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="Not set"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="114dp"
            android:src="@mipmap/location"
            />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="110dp"
            android:gravity="left"
            android:text="Location： "
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="142dp"
            android:layout_marginTop="110dp"
            android:gravity="left"

            android:text="Not set"
            android:textSize="20dp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="144dp"
            android:src="@mipmap/company"
            />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="140dp"
            android:gravity="left"
            android:text="Company： "
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/company_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="140dp"
            android:gravity="left"

            android:text="Not set"
            android:textSize="20dp"
            android:textColor="#000000"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/git_message"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="Github Message"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="54dp"
            android:src="@mipmap/point"
            />

        <Button
            android:id="@+id/events"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:text="Events"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="84dp"
            android:src="@mipmap/point"
            />

        <Button
            android:id="@+id/organize"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:background="#ffffff"
            android:text="Organization"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="114dp"
            android:src="@mipmap/point"
            />

        <Button
            android:id="@+id/starred"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="110dp"
            android:background="#ffffff"
            android:text="starred"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="144dp"
            android:src="@mipmap/point"
            />

        <Button
            android:id="@+id/followers"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="140dp"
            android:background="#ffffff"
            android:text="followers"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="174dp"
            android:src="@mipmap/point"
            />

        <Button
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="170dp"
            android:background="#ffffff"
            android:text="following"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="204dp"
            android:src="@mipmap/point"
            />

        <Button
            android:id="@+id/gists"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="200dp"
            android:background="#ffffff"
            android:text="gists"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="left"
            />

        <Button
            android:id="@+id/repository"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="230dp"
            android:background="#ffffff"
            android:text="repository"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="234dp"
            android:src="@mipmap/point"
            />

    </android.support.v7.widget.CardView>

</ScrollView>