<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:minHeight="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.lenovo.httpapi.XCRoundImageView
            android:id="@+id/repo_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColor="#242424" />

        <TextView
            android:id="@+id/repo_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="title:"
            android:textColor="#242424"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/repo_title_text"
            android:layout_width="164dp"
            android:layout_height="20dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:padding="3dp"
            android:text="123456"
            android:textColor="#242424"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="创建时间:"
            android:textColor="#242424"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/create_time_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="1524"
            android:textColor="#242424"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/prob_state"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="问题状态:"
            android:textColor="#242424"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/prob_state_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="02:11"
            android:textColor="#242424"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/issue_detail"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="80dp"
            android:gravity="left"
            android:paddingTop="3dp"
            android:text="问题描述:"
            android:textColor="#242424"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/issue_detail_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="153dp"
            android:layout_marginTop="80dp"
            android:gravity="left"
            android:padding="3dp"
            android:text="2007-10"
            android:textColor="#666666 "
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/issue_comment"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/issue_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="10"
            android:textColor="#242424"
            android:textSize="10dp" />


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>